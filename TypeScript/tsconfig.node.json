{
  "compilerOptions": {
    "target": "ES2019", // or another appropriate version
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Specify the output directory for compiled files
    "rootDir": "./src"  // Specify the root directory of your TypeScript files
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}